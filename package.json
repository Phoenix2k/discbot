{
  "author": "Niko Pettersen <niko@refinery.fi>",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "bugs": {
    "url": "https://github.com/Phoenix2k/discbot/issues"
  },
  "dependencies": {
    "consola": "^2.15.3",
    "dotenv": "^8.2.0"
  },
  "description": "Discord bot based on Discord.js",
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "babel-jest": "^26.6.3",
    "chalk": "^4.1.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.0.9",
    "inquirer": "^7.3.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "node-notifier": "^9.0.0",
    "prettier": "^2.2.1",
    "rollup": "^2.39.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^26.5.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.5"
  },
  "engines": {
    "node": ">=15.0.0",
    "npm": ">=7.5.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "plugin:prettier/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "root": true
  },
  "homepage": "https://github.com/Phoenix2k/discbot#readme",
  "jest": {
    "globals": {
      "ts-jest": {
        "compiler": "typescript"
      }
    },
    "preset": "ts-jest",
    "setupFiles": [
      "dotenv/config"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "keywords": [
    "bot",
    "disc",
    "discord",
    "node",
    "typescript"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,json,ts}": [
      "eslint --fix"
    ]
  },
  "main": "dist/index.mjs",
  "name": "discbot",
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Phoenix2k/discbot.git"
  },
  "scripts": {
    "build": "rm -rf dist && rollup -c && prettier -w dist/.",
    "dev": "ts-node-dev --compiler-options '{ \"module\": \"commonjs\" }' --notify --respawn src/index.ts --watch src/**/*.ts",
    "generate:env": "node --experimental-json-modules --no-warnings scripts/env.mjs",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "postinstall": "husky install && test ! -f .env && npm run generate:env || echo",
    "pre-commit": "lint-staged",
    "pre-push": "npm run lint && npm test",
    "start": "node dist/index.mjs",
    "test": "jest --coverage --verbose",
    "test:clear-cache": "jest --clearCache"
  },
  "type": "module",
  "version": "0.1.0"
}
